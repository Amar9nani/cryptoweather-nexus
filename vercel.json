{
  "name": "cryptoweather-nexus",
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_WEATHER_API_KEY": "@weather_api_key",
    "NEXT_PUBLIC_CRYPTO_API_KEY": "@crypto_api_key", 
    "NEXT_PUBLIC_NEWS_API_KEY": "@news_api_key"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}